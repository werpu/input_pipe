{
  inputs: {
  /*no inputs as special case, we can use such a combination for
  command server only without mapping*/
  },
  outputs: {
    xbox1: {
      name: "Microsoft X-Box 360 pad",
      type: "xbx360"
    },
    xbox2: {
      name: "Microsoft X-Box 360 pad",
      type: "xbx360"
    },
    mouse1: {
      name: "mouse",
      type: "mouse"
    },
    keybd1: {
      name: "key1",
      type: "keybd"
    },
    exec1: {
      name: "exec1",
      type: "exec"
    }
  },
  rules: [
    {
      from: "digital",
      target_rules: [
        {
          from_ev: "code 1 (EV_KEY), code 103 (KEY_UP)",
          targets: [
            {
              to: "xbox1",
              to_ev: "(EV_KEY), code 103 (KEY_UP), value -1",
              //recurring aka auto fire
              periodical: 1,
              frequency: 10
            }
          ]
        }
      ]
    },
    {
      from: "analog_left",
      target_rules: [
        {
          from_ev: "(EV_KEY), code 103 (KEY_UP)",
          targets: [
            {
              to: "xbox1",
              to_ev: "(EV_KEY), code 103 (KEY_UP)"
            },
            {
              to: "xbox2",
              to_ev: "(EV_KEY), code 103 (KEY_UP)"
            }
          ]
        }
      ]
    },
    {
      from: "analog_left",
      target_rules: [
        {
          from_ev: "(EV_KEY), code 105 (KEY_UP)",
          targets: [
            {
              to: "exec1",
              to_ev: "(META), /usr/local/bin/4way"
            }
          ]
        },
        {
          from_ev: "(EV_KEY), code 108 (KEY_UP)",
          targets: [
            {
              to: "exec1",
              to_ev: "(META), /usr/local/bin/4way"
            }
          ]
        }
      ]
    }
  ]
}